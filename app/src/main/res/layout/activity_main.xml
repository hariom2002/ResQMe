<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:backgroundTint="#00FFFFFF">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/my_fab"
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:alpha="1"
        android:clickable="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/alert"
        app:backgroundTint="@color/colorAccent"
        app:elevation="15dp"
        app:fabCustomSize="185dp"
        app:fabSize="auto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.468"
        app:maxImageSize="65dp"
        app:useCompatPadding="false" />

    <Button
        android:id="@+id/button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="133dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:height="60dp"
        android:backgroundTint="#00FFFFFF"
        android:drawablePadding="6dp"
        android:gravity="left|center"
        android:paddingLeft="60dp"
        android:shadowColor="#00FFFFFF"
        android:text="History"
        android:textColor="#636363"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/contacts_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:height="60dp"
        android:backgroundTint="#00FFFFFF"
        android:drawablePadding="6dp"
        android:gravity="left|center"
        android:shadowColor="#00FFFFFF"
        android:text="Contacts"
        android:textColor="#636363"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/customize_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="262dp"
        android:layout_height="64dp"
        android:layout_marginTop="56dp"
        android:layout_weight="1"
        android:height="60dp"
        android:backgroundTint="#00FFFFFF"
        android:drawablePadding="6dp"
        android:gravity="left|center"
        android:shadowColor="#00FFFFFF"
        android:text="Customize Message"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_fab" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="44dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toTopOf="@+id/button"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/history" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="64dp"
        android:layout_height="47dp"
        android:layout_marginTop="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/contacts_btn"
        app:layout_constraintEnd_toEndOf="@+id/contacts_btn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/contacts_btn"
        app:layout_constraintTop_toTopOf="@+id/contacts_btn"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/contact_icon" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="414dp"
        android:layout_height="73dp"
        android:background="#3B000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/flashlight_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="306dp"
            android:layout_height="60dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:height="60dp"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/app_name"
            android:drawablePadding="6dp"
            android:gravity="left|center"
            android:shadowColor="#00FFFFFF"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="412dp"
            android:layout_height="44dp"
            android:layout_marginTop="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/flashlight_btn"
            app:layout_constraintEnd_toEndOf="@+id/flashlight_btn"
            app:layout_constraintStart_toStartOf="@+id/flashlight_btn"
            app:layout_constraintTop_toTopOf="@+id/flashlight_btn"
            app:srcCompat="@drawable/torch" />

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="209dp"
        android:layout_height="80dp"
        android:layout_marginBottom="48dp"
        android:text="EMERGENCY BUTTON"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/my_fab"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="220dp"
        android:layout_height="220dp"
        app:layout_constraintBottom_toBottomOf="@+id/my_fab"
        app:layout_constraintEnd_toEndOf="@+id/my_fab"
        app:layout_constraintStart_toStartOf="@+id/my_fab"
        app:layout_constraintTop_toTopOf="@+id/my_fab"
        app:srcCompat="@drawable/ring" />


</android.support.constraint.ConstraintLayout>